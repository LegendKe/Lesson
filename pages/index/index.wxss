/**index.wxss**/
.poster {
   display: inline-block;
   height: 216rpx;
   width: 100%;
   margin-bottom: 8rpx;
   background: linear-gradient(to bottom right, #079af9 , #facb37);
}
.poster text{
   display: block;
   text-align: center;
   color: #fff;
   font-size: 24rpx;
}
.poster .poster-title{
  font-size: 40rpx;
  height: 140rpx;
  line-height: 140rpx;
}
.feature-list{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 12rpx; 
}
.feature-list-item{
  height: 230rpx;
  width: 236rpx;
  border-radius: 8rpx;
  background: red;
  text-align: center;
  color: #ffffff;
  line-height: 230rpx;
  margin-top: 8rpx;
  font-size: 24rpx;
}
.footer{
  padding-top: 50rpx;
  padding-bottom: 32rpx;
  text-align: center;
  font-size: 24rpx;
  color:#9e9e9e;
}